<div class="container music-playing">
<div class='row mt-3'>
    {{#each musics}}
    <div class='col-3 musicPlayer mt-3'>
        {{!-- <a href="/artistDetail/{{this.id}}"> --}}
            <img src='{{this.cover_music}}' alt='' class='list-thumbnail' />
            <div class='title-music'>
                {{this.title}}
            </div>
            <div class='music-itself'>
                <audio controls>
                <source src='{{this.music}}' type="audio/mpeg">
                </audio>
            </div>
        {{!-- </a> --}}
    </div>
    {{/each}}
</div>
</div>

