<div class="container register mt-5 p-5" >
    <form action="/register" method="POST">
<div class="row register mb-2">
    <div class="col-2"></div>
    <div class="col-8 register-input mb-2">
        <input type="text" class="input-name" name="username" placeholder="Username">
    </div>
    <div class="col-2"></div>
</div>

<div class="row register mb-2">
    <div class="col-2"></div>
    <div class="col-8 register-input mb-2">
        <input type="email" class="input-email" name="email" placeholder="Email">
    </div>
    <div class="col-2"></div>
    </div>

<div class="row register mb-2">
    <div class="col-2"></div>
    <div class="col-8 register-input mb-2">
        <input type="password" class="input-password" name="password" placeholder="Password">
    </div>
    <div class="col-2"></div>
    </div>

<div class="row register mb-2">
    <div class="col-3"></div>
    <div class="col-6">
        <button type="submit" class="btn-register">Register</button>
    </div>
    <div class="col-3"></div>
    </div>


   

</form>
</div>